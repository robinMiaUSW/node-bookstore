<div class="container my-5">
  <% if (books.length> 0) { %>
    <h2 class="mb-4 text-center fw-bold display-6">Your Shopping Cart</h2>

    <div class="row g-4">
      <!-- Books Section -->
      <div class="col-lg-8">
        <% books.forEach((book, i)=> { %>
          <div class="card mb-4 p-4 shadow-sm border-0 rounded-lg">
            <div class="row g-0 align-items-center">
              <!-- Book Image -->
              <div class="col-3 d-flex justify-content-center">
                <img src="<%= book.item.image.imagePath %>" alt="Book Cover" class="img-fluid rounded shadow-sm"
                  style="max-width: 100px;">
              </div>

              <!-- Book Info -->
              <div class="col-9">
                <div class="d-flex justify-content-between">
                  <div>
                    <h5 class="card-title text-dark fw-bold mb-1">
                      <%= book.item.title %>
                    </h5>
                    <p class="text-muted mb-2">by <%= book.item.author %>
                    </p>
                  </div>
                  <div>
                    <h6 class="text-dark fw-bold mb-1">&pound;<%= book.item.price %>
                    </h6>
                  </div>
                </div>

                <!-- Quantity Controls and Actions -->
                <div class="d-flex justify-content-between align-items-center mt-2">
                  <!-- Quantity Controls -->
                  <div class="d-flex align-items-center">
                    <button class="btn btn-sm btn-secondary"
                      onclick="location.href='/cart/decrease/<%= book.item._id %>'">
                      <i class='bi bi-dash-circle'></i>
                    </button>
                    <span class="mx-3 fw-bold text-dark">
                      <%= book.qty %>
                    </span>
                    <button class="btn btn-sm btn-primary"
                      onclick="location.href='/cart/increase/<%= book.item._id %>'">
                      <i class="bi bi-plus-circle"></i>
                    </button>
                  </div>

                  <!-- Remove Action -->
                  <a href="/cart/remove/<%= book.item._id %>" class="btn btn-danger btn-sm shadow-sm">
                    <i class="bi bi-trash"></i> Remove
                  </a>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
      </div>

      <!-- Cart Summary Section -->
      <div class="col-lg-4">
        <div class="card p-4 bg-light border-0 rounded shadow-sm">
          <h5 class="mb-4 fw-bold">Order Summary</h5>
          <ul class="list-unstyled mb-4">
            <li class="d-flex justify-content-between mb-2">
              <span class="fw-normal">Subtotal</span>
              <span>&pound;<%= totalPrice %></span>
            </li>
            <li class="d-flex justify-content-between mb-2">
              <span class="fw-normal">Shipping</span>
              <span>Free</span>
            </li>
            <li class="d-flex justify-content-between fw-bold h5">
              <span>Total</span>
              <span>&pound;<%= totalPrice %></span>
            </li>
          </ul>
          <form action="/orders/checkout" method="post">
            <button type="submit" class="btn btn-primary btn-block w-100 py-2 mt-3 shadow-sm rounded">Proceed to
              Checkout</button>
          </form>
        </div>
      </div>
    </div>
    <% } else { %>
      <div class="text-center py-5">
        <h3 class="mb-4 text-muted">Your Cart is Empty!</h3>
        <a href="/" class="btn btn-primary rounded-pill px-4 shadow-sm">Continue Shopping</a>
      </div>
      <% } %>
</div>